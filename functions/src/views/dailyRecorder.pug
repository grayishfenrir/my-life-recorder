doctype html
html(lang="en")
  include partials/head
  body
    .container
      h1 #{pageTitle}
      .chat-box
        #messages.messages
        form#chat-form
          input(type="text", id="message", name="message", required, class="form-control", placeholder="Type your message...")
          button.btn.btn-primary(type="submit") Send
          button.btn.btn-secondary(id="saveButton", type="button") Save Diary

      a.btn.btn-secondary(href="/histories", style="margin-top: 50px;") History

    include partials/footer

    script(type="module" src="/assets/js/chatScripts.js")

    script(type="application/json", id="initial-conversations") #{conversations}